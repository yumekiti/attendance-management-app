{
	"name": "attendance-management-app",
	"description": "Desktop app for attendance management using Desktop PC's UUID",
	"version": "0.1.0",
	"license": "MIT",
	"author": {
		"name": "yumekiti"
	},
	"repository": {
		"url": "https://github.com/yumeki/app.git"
	},
	"main": "dist/main.js",
	"scripts": {
		"dev": "rimraf dist && run-p dev:webpack dev:electron",
		"build": "rimraf dist && cross-env NODE_ENV=\"production\" webpack --progress",
		"build:electron": "electron-packager . --overwrite",
		"dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
		"dev:electron": "wait-on dist/main.js dist/index.html && electronmon ."
	},
	"electronmon": {
		"patterns": [
			"dist/**/*"
		]
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"systeminformation": "^5.21.22"
	},
	"devDependencies": {
		"@types/node": "^20.11.0",
		"@types/react": "^18.2.47",
		"@types/react-dom": "^18.2.18",
		"cross-env": "^7.0.3",
		"css-loader": "^6.9.0",
		"electron": "^28.1.3",
		"electron-packager": "^17.1.2",
		"electronmon": "^2.0.2",
		"html-webpack-plugin": "^5.6.0",
		"mini-css-extract-plugin": "^2.7.7",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"wait-on": "^7.2.0",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	}
}
